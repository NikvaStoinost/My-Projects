@model RecipesProject.Data.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Delete Category</h1>
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Are you sure you want to delete this category?</h3>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Category Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
                    <a asp-controller="Categories" asp-action="Index" asp-area="Identity" class="btn btn-outline-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>