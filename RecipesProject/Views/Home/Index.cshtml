@model IEnumerable<RecipesProject.ViewModels.Recipes.IndexPageRecipeViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100" style="width: 100%;">
                    <img class="card-img-top" src="@item.RecipeModel.FirstOrDefault()?.ImageUrl" alt="@item.RecipeModel.FirstOrDefault()?.Title">
                    <div class="card-body">
                        <h5 class="card-title">@item.RecipeModel.FirstOrDefault()?.Title</h5>
                        <p class="card-text">@item.RecipeModel.FirstOrDefault()?.CategoryName</p>
                        <a asp-controller="Recipes" asp-action="ById" asp-route-id="@item.Id" class="btn btn-primary">Go to Recipe</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

